<UserControl x:Class="salon.ContactCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:salon"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="#2C3E50" BorderThickness="1" CornerRadius="10" Padding="10" Background="#34495E">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Name="ContactPhoto" Width="100" Height="100" Margin="10" VerticalAlignment="Center" Source="https://via.placeholder.com/100"/>
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Name="ContactNameText" FontSize="20" FontWeight="Bold" Foreground="#ECF0F1" Text="Контактное Лицо"/>
                <TextBlock Name="ContactPhoneText" FontSize="16" Foreground="#BDC3C7" Text="+7 (999) 123-45-67"/>
                <TextBlock Name="ContactEmailText" FontSize="14" Foreground="#95A5A6" Margin="0,10,0,0" Text="example@domain.com"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
